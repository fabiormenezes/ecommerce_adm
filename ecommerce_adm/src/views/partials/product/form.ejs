<div class="box-body">
	<div class="form-group">
		<label for="name">Nome:</label>
		<input type="text" name="name" class="form-control" placeholder="Nome do produto" value="<%= product.name %>">
	</div>
	<div class="form-group">
		<label for="image">Imagem:</label>
		<input type="file" name="images3" class="form-control">
	</div>
	<div class="form-group">
		<label for="description">Descrição</label>
		<input type="text" name="desc" class="form-control" placeholder="Descrição do Produto" value="<%= product.desc %>">
	</div>
	<div class="form-group">
		<label for="sales_price">Preço:</label>
		<div class="input-group">
			<span class="input-group-addon">R$</span>
			<input type="number" step="0.01" name="sales_price" class="form-control" placeholder="Preço do produto" value="<%= product.sales_price %>">
		</div>
	</div>
	<div class="form-group">
		<label for="discount">Desconto:</label>
		<div class="input-group">
			<input type="number" step="0.01" name="discount" class="form-control" placeholder="Percentual de desconto do produto" value="<%= product.discount %>">
			<span class="input-group-addon">%</span>
		</div>
	</div>
	<div class="form-group">
		<label for="quantity">Quantidade:</label>
		<input type="number" step="0.01" name="quantity" class="form-control" placeholder="Quantidade de Produtos" value="<%= product.quantity %>">
	</div>
	<div class="form-group">
		<label for="category">Categoria:</label>
		<select name="category" class="form-control">
			<% for (var i = 0; i < categories.length; i++) { %>
				<option value="<%= categories[i]._id %>" <%= selected(categories[i]._id, product.category._id) %>><%= categories[i].name %></option>
			<% } %>
		</select>
	</div>
	<div class="form-group">
		<label for="">Enable?</label>
		<input type="checkbox" name="enable" value="<%= product.enable %>" checked="<%= checked(product.enable)%>">
	</div>
</div>

<div class="box-footer">
	<button type="submit" class="btn btn-primary">Salvar</button>
	<a href="/product"   class="btn btn-default">Voltar</a>	
</div>