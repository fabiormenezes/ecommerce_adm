<div class="box-body">
	<div class="form-group">
		<label for="name">Nome:</label>
		<input type="text" name="name" class="form-control" placeholder="Nome da Categoria" value="<%= category.name %>">
	</div>
	<div class="form-group">
		<label for="description">Descrição:</label>
		<input type="text" name="desc" class="form-control" placeholder="Descrição da Categoria" value="<%= category.desc %>">
	</div>
	<div class="form-group">
		<label for="">Ativo / Inativo</label>
		<input type="checkbox" name="enable" value="<%= category.enable %>" checked="<%= checked(category.enable)%>">
	</div>
</div>

<div class="box-footer">
	<button type="submit" class="btn btn-primary">Save</button>
	<a href="/category"   class="btn btn-default">Back</a>	
</div>